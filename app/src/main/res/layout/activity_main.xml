<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vladimir.a24_12_17.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/start_second_btn"
        android:text="Start Second"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_second_btn"
        android:layout_centerHorizontal="true"
        android:id="@+id/start_third_btn"
        android:text="Start third"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open link"
        android:layout_below="@id/start_third_btn"
        android:layout_centerHorizontal="true"
        android:id="@+id/open_link_btn"
        />

</RelativeLayout>
